<?xml version="1.0"?>
<component name="org.nuxeo.ecm.core.redis.RedisExecutor">

  <require>org.nuxeo.ecm.core.work.service</require>
  <require>org.nuxeo.ecm.core.storage.lock.LockManagerService</require>
  <require>org.nuxeo.ecm.core.cache.CacheService</require>


  <documentation>
    Redis executor service.
  </documentation>

  <service>
    <provide interface="org.nuxeo.ecm.core.redis.RedisConfiguration" />
    <provide interface="org.nuxeo.ecm.core.redis.RedisExecutor" />
    <provide interface="org.nuxeo.ecm.core.redis.RedisAdmin" />
  </service>

  <implementation class="org.nuxeo.ecm.core.redis.RedisExecutorComponent" />

  <extension-point name="configuration">

    <documentation>
      Extension allowing the configuration of a Redis executor.
      <p />
      Server configuration:
      <code>
        <executor>
          <prefix>nuxeo:work:</prefix>
          <timeout>0</timeout>
        </executor>
        <server>
          <host>localhost</host>
          <port>6379</port>
          <password>secret</password>
          <database>0</database>
          <timeout>2000</timeout>
        </server>
      </code>
      Sentinel configuration:
      <code>
        <executor disabled="false">
          <prefix>nuxeo:work:</prefix>
        </executor>
        <server>
          <host name="localhost" port="26379"/>
          <host name="localhost" port="26380"/>
          <master>master</master>
          <password>secret</password>
          <database>0</database>
          <timeout>2000</timeout>
        </server>
      </code>
    </documentation>

    <object class="org.nuxeo.ecm.core.redis.RedisExecutorDescriptor" />

  </extension-point>
 

</component>

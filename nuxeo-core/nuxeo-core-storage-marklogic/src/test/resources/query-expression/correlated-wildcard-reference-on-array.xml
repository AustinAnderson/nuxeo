<search xmlns="http://marklogic.com/appservices/search">
  <query xmlns="http://marklogic.com/appservices/search" xmlns:xs="http://www.w3.org/2001/XMLSchema"
         xmlns:search="http://marklogic.com/appservices/search" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <container-query>
      <element ns="" name="dc__subjects" />
      <value-query type="string">
        <element ns="" name="dc__subjects__item" />
        <text>abc*</text>
        <term-option>punctuation-sensitive</term-option>
        <term-option>wildcarded</term-option>
        <term-option>whitespace-sensitive</term-option>
        <weight>1.0</weight>
      </value-query>
    </container-query>
  </query>
  <options xmlns="http://marklogic.com/appservices/search">
    <transform-results apply="empty-snippet" />
  </options>
</search>

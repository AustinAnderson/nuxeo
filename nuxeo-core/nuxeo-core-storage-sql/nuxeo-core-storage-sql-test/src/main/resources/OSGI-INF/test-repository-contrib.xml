<?xml version="1.0"?>
<component name="org.nuxeo.ecm.core.storage.sql.test.repo.repository:${nuxeo.test.vcs.repository}">
  <extension target="org.nuxeo.runtime.datasource" point="datasources">
    <datasource name="jdbc/${nuxeo.test.vcs.database}" driverClassName="${nuxeo.test.vcs.driver}"
      maxActive="25" maxIdle="5">
      <property name="url">${nuxeo.test.vcs.url}</property>
      <property name="username">${nuxeo.test.vcs.user}</property>
      <property name="password">${nuxeo.test.vcs.password}</property>
    </datasource>
    <link name="jdbc/repository_${nuxeo.test.vcs.repository}" global="jdbc/${nuxeo.test.vcs.database}"/>  
  </extension>
  <extension target="org.nuxeo.ecm.core.blob.BlobManager" point="configuration">
    <blobprovider name="${nuxeo.test.vcs.repository}">
      <class>${nuxeo.test.vcs.binary-manager}</class>
      <property name="key">${nuxeo.test.vcs.binary-manager-key}</property>
    </blobprovider>
  </extension>
  <extension target="org.nuxeo.ecm.core.api.repository.RepositoryManager"
    point="repositories">
    <repository name="${nuxeo.test.vcs.repository}" />
  </extension>
  <extension target="org.nuxeo.ecm.core.storage.sql.RepositoryService"
    point="repository">
    <repository name="${nuxeo.test.vcs.repository}"
      factory="${nuxeo.test.vcs.repository-factory}">
        <idType>${nuxeo.test.vcs.idtype}</idType>
        <schema>
          <field type="largetext">note</field>
          <field type="largetext">relatedtext</field>
        </schema>
        <indexing>
          <neverPerDocumentFacets>
            <facet>NotPerDocFacet</facet>
          </neverPerDocumentFacets>
          <fulltext analyzer="${nuxeo.test.vcs.fulltext.analyzer}"
            disabled="${nuxeo.test.vcs.fulltext.disabled}" searchDisabled="${nuxeo.test.vcs.fulltext.search.disabled}">
            <index> <!-- name="default" implied -->
              <!-- all props implied -->
            </index>
            <index name="title">
              <field>dc:title</field>
            </index>
          </fulltext>
        </indexing>
        <pool maxPoolSize="20"/>
        <pathOptimizations enabled="true"/>
      </repository>
  </extension>
</component>

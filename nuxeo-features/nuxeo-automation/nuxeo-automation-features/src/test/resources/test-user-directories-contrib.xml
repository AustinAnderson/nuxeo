<?xml version="1.0"?>
<component name="org.nuxeo.ecm.core.automation.user-directories">

  <require>org.nuxeo.ecm.platform.test.directory.sql.storage</require>
  
  <extension target="org.nuxeo.ecm.directory.sql.SQLDirectoryFactory"
    point="directories">


 <directory name="userDirectory">

      <dataFile>testdirectorydata/users.csv</dataFile>

      <references>
        <tableReference field="groups" directory="groupDirectory"
            table="user2group" sourceColumn="userId"
            targetColumn="groupId" dataFile="user2group.csv"
            master="true"/>
      </references>

    </directory>

    <directory name="groupDirectory">

      <dataFile>testdirectorydata/groups.csv</dataFile>
      
    </directory>
  </extension>


 <extension target="org.nuxeo.ecm.platform.actions.ActionService"
    point="filters">

    <filter id="directoriesManagementAccess">
      <rule grant="true">
      </rule>
    </filter>

  </extension>

</component>

<?xml version="1.0"?>

<component name="org.nuxeo.ecm.platform.picture.web.layouts">

  <require>org.nuxeo.ecm.platform.forms.layout.WebLayoutManager</require>

  <extension target="org.nuxeo.ecm.platform.forms.layout.WebLayoutManager"
    point="layouts">

    <layout name="picturebook">
      <templates>
        <template mode="any">/layouts/layout_default_template.xhtml</template>
      </templates>
      <rows>
        <row>
          <widget>timeinterval</widget>
        </row>
      </rows>
      <widget name="timeinterval" type="int">
        <labels>
          <label mode="any">label.picture.timeinterval</label>
        </labels>
        <translated>true</translated>
        <fields>
          <field schema="picturebook">timeinterval</field>
        </fields>
        <properties widgetMode="edit">
          <property name="required">true</property>
          <property name="styleClass">dataInputText</property>
        </properties>
      </widget>
    </layout>

  </extension>

</component>
